# Staging environment variables
ENVIRONMENT=staging
NODE_ENV=production

# Database
POSTGRES_DB=fairhire_staging
POSTGRES_USER=fairhire
POSTGRES_PASSWORD=<CHANGE_ME>
DATABASE_URL=postgresql://fairhire:<CHANGE_ME>@postgres:5432/fairhire_staging

# Redis
REDIS_URL=redis://redis:6379/1

# API Keys
GEMINI_API_KEY=<CHANGE_ME>

# Firebase
FIREBASE_SERVICE_ACCOUNT=/app/secrets/service-account-key.json

# Security
SECRET_KEY=<CHANGE_ME_LONG_RANDOM_STRING>
ALLOWED_HOSTS=staging.fairhire.example.com,api-staging.fairhire.example.com

# CORS
CORS_ORIGINS=https://staging.fairhire.example.com

# Docker Registry
DOCKER_REGISTRY=ghcr.io/your-org

# Monitoring
SENTRY_DSN=<OPTIONAL>
