# Production environment variables
ENVIRONMENT=production
NODE_ENV=production

# Database
POSTGRES_DB=fairhire_prod
POSTGRES_USER=fairhire
POSTGRES_PASSWORD=<CHANGE_ME>
DATABASE_URL=postgresql://fairhire:<CHANGE_ME>@postgres:5432/fairhire_prod

# Redis
REDIS_URL=redis://redis:6379/0

# API Keys (use secrets manager in production)
GEMINI_API_KEY=<CHANGE_ME>

# Firebase
FIREBASE_SERVICE_ACCOUNT=/app/secrets/service-account-key.json

# Security
SECRET_KEY=<CHANGE_ME_LONG_RANDOM_STRING>
ALLOWED_HOSTS=fairhire.example.com,api.fairhire.example.com

# CORS
CORS_ORIGINS=https://fairhire.example.com

# Docker Registry
DOCKER_REGISTRY=ghcr.io/your-org

# Monitoring
SENTRY_DSN=<OPTIONAL>
